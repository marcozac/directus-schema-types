{{- define "header/base" -}}
// File generated by directus-schema-types. Do not change.
{{- end }}
{{- /* "header/base" END */ -}}


{{- /* "import/base/from" defines the local path of an import from statement. */ -}}
{{- /* It must be executed with a context having the path in .Name */ -}}
{{- define "import/base/from" }}
{{- printf "./%s" $.Name | quote }}
{{- end }}
{{- /* "import/base/from" END */ -}}


{{- /* "import/from_relations" defines the imports from the collection relations. */ -}}
{{- /* It must be executed with a Collection context. */ -}}
{{- define "import/from_relations" }}
{{- range dedupeRelationsImport $.Relations.Values }}
{{- if ne $.Name .Collection.Name -}}{{/* avoid self-import */}}
{{- $types := join .Collection.TypeName .Collection.PrimaryKey.TypeName }}
import { {{ $types }} } from {{ template "import/base/from" .Collection }};
{{- end }}
{{- end }}
{{- end }}
{{- /* "import/from_relations" END */ -}}


{{- /* "import/collections" defines the imports from the collections schema. */ -}}
{{- /* It must be executed with a []Collection context. */ -}}
{{- define "import/collections" }}
{{- range $ }}
import { {{ .TypeName }} } from {{ printf "./%s" .Name | quote }}; 
{{- end }}
{{- end }}
{{- /* "import/collections" END */ -}}


{{- /* "import/relations" defines the imports of all the collection relations. */ -}}
{{- /* It must be executed with a []Collection context. */ -}}
{{- define "import/relations" }}
{{- range $ }}
import { {{ join .Relations.TypeName .RelatedCollections.TypeName }} } from {{ printf "./%s" .Name | quote }}; 
{{- end }}
{{- end }}
{{- /* "import/relations" END */ -}}
