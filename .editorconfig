root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 4
max_line_length = 120
trim_trailing_whitespace = true
insert_final_newline = true

[*.{json,yml,yaml,md,tmpl}]
max_line_length = 80

[*.{json,yml,yaml}]
indent_size = 2

[*.{ts}]
indent_style = tab

[*.{yml,yaml,[jt]s,[cm]js}]
quote_type = single

[{*.go,go.mod,go.sum,*.tmpl}]
indent_style = tab
indent_size = 8

[{*.sh,Dockerfile,*.Dockerfile}]
indent_style = tab
binary_next_line = true
switch_case_indent = true
space_redirects = true

[*.sh]
shell_variant = bash

[{Dockerfile,*.Dockerfile}]
shell_variant = posix
