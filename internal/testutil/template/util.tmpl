{{/* json/mapToFields converts the given map to json fields. */}}
{{- define "json/mapToFields" }}
{{- $l := len . }}{{/* get map length */}}
{{- range $k, $v := . }}
{{- $l = sub $l 1 }}
    "{{ $k }}": "{{ $v }}"
{{- if gt $l 0 }},{{- end}}{{/* add "," if the element is not the last one */}}
{{- end }}
{{- end }}
